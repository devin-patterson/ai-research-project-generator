# AI Research Project Generator - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="AI Research Project Generator"
APP_VERSION="2.0.0"
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# API Settings
# =============================================================================
API_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# =============================================================================
# LLM Configuration
# =============================================================================
# Provider: ollama, openai, anthropic, local_openai_compatible
LLM_PROVIDER=ollama

# Model name (depends on provider)
# Ollama: llama3.1:8b, llama3.2:3b, qwen2.5:14b, etc.
# OpenAI: gpt-4, gpt-3.5-turbo, etc.
LLM_MODEL=llama3.1:8b

# Base URL for LLM API
# Ollama default: http://localhost:11434
# OpenAI: https://api.openai.com/v1
LLM_BASE_URL=http://localhost:11434

# API Key (required for OpenAI, Anthropic, etc.)
# LLM_API_KEY=your-api-key-here

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=120

# =============================================================================
# Academic Search API Configuration
# =============================================================================
# Semantic Scholar API Key (optional, increases rate limits)
# Get one at: https://www.semanticscholar.org/product/api
# SEMANTIC_SCHOLAR_API_KEY=your-api-key-here

# OpenAlex Polite Pool Email (optional, increases rate limits)
# OPENALEX_EMAIL=your-email@example.com

# CrossRef Polite Pool Email (optional, increases rate limits)
# CROSSREF_EMAIL=your-email@example.com

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
